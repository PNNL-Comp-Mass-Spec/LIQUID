<Window x:Class="Liquid.View.SingleTargetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:Liquid.ViewModel"
        xmlns:oxy="http://oxyplot.codeplex.com"
        Title="SingleTargetWindow" Height="700" Width="1020">
    <Grid VerticalAlignment="Top" Height="Auto" Width="Auto" HorizontalAlignment="Left">
        <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
            <StackPanel Height="Auto" Width="Auto" HorizontalAlignment="Left">
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <Button Content="Open File" Click="RawFileButtonClick" Height="23" HorizontalAlignment="Left" Name="RawFileButton" VerticalAlignment="Top" Width="60" />
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,0,0,0" Name="RawFileLocationTextBlock" Text="{Binding RawFileName}" VerticalAlignment="Top" Width="155" Visibility="Visible" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="HcdErrorTextBlock" Text="HCD Mass Error:" VerticalAlignment="Top" Width="100" />
                    <TextBox Text="30" Height="23" HorizontalAlignment="Left" Margin="5,3,0,0" Name="HcdErrorTextBox" VerticalAlignment="Top" Width="50" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="CidErrorTextBlock" Text="CID Mass Error:" VerticalAlignment="Top" Width="100" />
                    <TextBox Text="500" Height="23" HorizontalAlignment="Left" Margin="5,3,0,0" Name="CidErrorTextBox" VerticalAlignment="Top" Width="50" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="CommonNameTextBlock" Text="Common Name:" VerticalAlignment="Top" Width="100" />
                    <TextBox Text="PE(18:3/20:5)" Height="23" HorizontalAlignment="Left" Margin="5,3,0,0" Name="CommonNameTextBox" VerticalAlignment="Top" Width="110" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="EmpiricalFormulaTextBlock" Text="Empirical Formula:" VerticalAlignment="Top" Width="100" />
                    <TextBox Text="C43H71NO8P" Height="23" HorizontalAlignment="Left" Margin="5,3,0,0" Name="EmpiricalFormulaTextBox" VerticalAlignment="Top" Width="110" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <TextBlock Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="FragmentationModeTextBlock" Text="Ionization Mode:" VerticalAlignment="Top" Width="100" />
                    <ComboBox ItemsSource="{Binding FragmentationModeList}" Height="23" HorizontalAlignment="Left" Margin="5,3,0,0" Name="FragmentationModeComboBox" VerticalAlignment="Top" Width="110" />
                </DockPanel>
                <DockPanel Height="Auto" Width="Auto" FlowDirection="LeftToRight">
                    <Button Content="Search For Target!" Click="SearchForTargetButtonClick" Height="23" HorizontalAlignment="Center" Name="SearchForTargetButton" VerticalAlignment="Top" Width="120" Margin="0,5,0,0" DockPanel.Dock="Right" />
                </DockPanel>
                <StackPanel Height="Auto" Width="Auto" HorizontalAlignment="Center">
                    <TextBlock Name="NumberOfResultsTextBlock" Width="Auto" FontWeight="Bold" Text="{Binding Path=SpectrumSearchResultList.Count, StringFormat='  # of Results: {0}'}" Margin="0,5,0,0" />
                    <DataGrid Name="SpectrumSearchResultsDataGrid" ItemsSource="{Binding Path=SpectrumSearchResultList}" SelectionChanged="SpectrumSearchResultSelectionChange" Height="Auto" MaxHeight="300" Width="Auto" AutoGenerateColumns="False" HeadersVisibility="Column" SelectionMode="Single" Margin="0,5,0,0" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Scan" Binding="{Binding Path=PrecursorSpectrum.ScanNum}" Width="50" />
                            <DataGridTextColumn Header="# MS/MS" Binding="{Binding Path=NumMatchingMsMsPeaks, StringFormat=0}" Width="60" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>
            <StackPanel Height="Auto" Width="Auto" HorizontalAlignment="Left" Margin="5,0,5,0" Name="SpectrumResultPanel">
                <TabControl>
                    <TabItem Header="HCD Plot">
                        <oxy:Plot Model="{Binding MsMsHcdPlot}" Margin="0,0,5,0" MinWidth="400" MinHeight="400" />
                    </TabItem>
                    <TabItem Header="CID Plot">
                        <oxy:Plot Model="{Binding MsMsCidPlot}" Margin="0,0,5,0" MinWidth="400" MinHeight="400" />
                    </TabItem>
                </TabControl>
                <StackPanel Height="Auto" Margin="5,0,5,0" Name="AnnotatedPeaksPanel" Width="Auto" HorizontalAlignment="Center">
                    <Label Content="Annotated MS/MS Peaks" FontWeight="Bold" Name="AnnotationLabel" Width="Auto" Padding="5,5,5,5" HorizontalAlignment="Center"/>
                    <DataGrid ItemsSource="{Binding Path=MsMsAnnotationList}" AutoGenerateColumns="False" Name="MsMsPeaksDataGrid" Width="500" Margin="0,0,0,0" HorizontalAlignment="Right" Height="Auto" MaxHeight="150" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding Path=FragmentionType}" Width="75" />
                            <DataGridTextColumn Header="m/z" Binding="{Binding Path=Position.X, StringFormat=0.###}" Width="75" />
                            <DataGridTextColumn Header="Intensity" Binding="{Binding Path=Position.Y, StringFormat=0}" Width="100" />
                            <DataGridTextColumn Header="Annotation" Binding="{Binding Path=Text}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>
            <StackPanel Height="Auto" HorizontalAlignment="Right" Margin="10,0,5,5" Name="msFeaturePanel" VerticalAlignment="Stretch" Width="Auto" Orientation="Vertical">
                <oxy:Plot Model="{Binding IsotopicProfilePlot}" Margin="0,0,0,0" Height="Auto" MinHeight="200" Width="Auto" MinWidth="250" />
                <oxy:Plot Model="{Binding XicPlot}" Margin="0,0,0,20" Height="Auto" MinHeight="200" Width="Auto" MinWidth="250" />
                <!--StackPanel Height="Auto" HorizontalAlignment="Left" Margin="0,0,0,0" Name="msFeatureInfoPanel" VerticalAlignment="Bottom" Width="Auto" Orientation="Vertical">
                    <Label Content="MS Feature Info" Height="Auto" Padding="5,5,5,5" Name="msFeatureInfoLabel" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" Width="Auto" />
                    <Grid Height="Auto" MinHeight="150" HorizontalAlignment="Left" Margin="0,0,0,0" Name="msFeatureInfoGrid" VerticalAlignment="Bottom" Width="Auto" MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Mass" FontWeight="Bold" />
                        <TextBlock Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.IsotopicProfile.MonoIsotopicMass, StringFormat=0.###}" />
                        <TextBlock Grid.Row="1" Text="Mass Error (ppm)" FontWeight="Bold" />
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.PpmError, StringFormat=0.###}" />
                        <TextBlock Grid.Row="2" Text="m/z" FontWeight="Bold" />
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.IsotopicProfile.MonoPeakMZ, StringFormat=0.###}" />
                        <TextBlock Grid.Row="3" Text="Normalized Elution Time" FontWeight="Bold" />
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.NormalizedElutionTime, StringFormat=0.###}" />
                        <TextBlock Grid.Row="4" Text="Scan LC Apex" FontWeight="Bold" />
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.Peak.XValue, StringFormat=0.###}" />
                        <TextBlock Grid.Row="5" Text="Intensity" FontWeight="Bold" />
                        <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding Path=CurrentInformedResultUnit.Peak.Height, StringFormat=0}" />
                    </Grid>
                </StackPanel-->
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
